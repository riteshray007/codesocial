
<head>
    
    <link rel="stylesheet" href="<%=assetPath('css/posts.css')%>">
</head>
<body>


 
     <div class="postdiv">

         <h1 class="vcenter " style="text-align:center" > welcome to posts </h1>
        <div class="vcenter" >

            <form id="create-post"  class="vcenter"  enctype="multipart/form-data" method="POST" action="/posts/create_post"  >
                <input name="content" id="contentinput" placeholder="what's in your mind.. " type="text">
                <input type="file" id="file" accept="image/*" class="postimage" name="image"  />
                <label for="file" class="btn-1 vcenter"><i class="fa-solid fa-image"></i></label>
                <button type="submit" class="submitbtn vcenter" > post </button>
                <div class="previewimgdiv vcenter " ></div>
            </form>
        </div>
        <div class="allposts">
            <%-include('posts_post')-%>
        </div>


      <div class="friends" >
        <h3> Contacts </h3>
       <% for(let f of users) { %>
        <% if(f._id != user.id){ %>
            <div class="person" id="<%= f._id %>" >  <%=  f.name  %> </div>
        <% } %>
      <% } %>
      </div>
      
            
    </div>

       <script src="<%= assetPath('js/posts.js') %>" ></script>
       <script src="<%= assetPath('js/home_post.js') %>" ></script>
      
</body>
</html>